{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "tenant-route": {
        "ClusterId": "tenant-cluster",
        "Match": {
          "Path": "/tenant-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "board-route": {
        "ClusterId": "board-cluster",
        "Match": {
          "Path": "/board-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "project-route": {
        "ClusterId": "project-cluster",
        "Match": {
          "Path": "/project-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "grpc-task-route": {
        "ClusterId": "grpc-task-cluster",
        "Match": {
          "Path": "/grpc-task-service/{**catch-all}"
        },
        "Transforms": [ { "RequestHeaderOriginalHost": "true" } ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5056/"
          }
        }
      },
      "tenant-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5052/"
          }
        }
      },
      "project-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5053/"
          }
        }
      },
      "board-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5054/"
          }
        }
      },
      "grpc-task-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5055/"
          }
        },
        "HttpRequest": {
          "Version": "2.0" // ensures HTTP/2 to the gRPC service
        }
      }
    }
  }
}
